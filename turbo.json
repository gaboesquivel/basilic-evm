{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "foundry/out/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"cache": true
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
